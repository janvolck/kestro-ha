  "version": "0.2.0",
  "configurations": [
    {
      "name": "Kestro Home Assistant Services",
      "type": "python",
      "request": "launch",
      "cwd": "${workspaceFolder}/python",
      "module": "kestro",
      "console": "integratedTerminal"
    },
    {
      "name": "Kestro Home Assistant Services (Attach)",
      "type": "python",
      "request": "attach",
      "connect": {
        "host": "192.168.100.135",
        "port": 5678
      },
      "pathMappings": [{
        "localRoot": "${workspaceFolder}",
        "remoteRoot": "/mnt/host"
      }]
    },
    {
      "name": "Kestro Home Assistant Angular",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ]
}
